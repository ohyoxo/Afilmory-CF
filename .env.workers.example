# Cloudflare Workers 环境变量示例
# 复制此文件为 .env 并填入你的配置

# 环境设置
NODE_ENV=production
ENVIRONMENT=production

# 外部 S3 存储配置 (可选)
# 如果你想从外部 S3 兼容存储同步照片
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET_NAME=your-source-bucket
S3_PREFIX=photos/
S3_CUSTOM_DOMAIN=https://your-cdn-domain.com
S3_EXCLUDE_REGEX=\.(tmp|temp)$

# GitHub 集成配置 (可选)
# 用于从 GitHub 仓库同步照片
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=username/photo-repository

# 站点配置
SITE_NAME=My Photo Gallery
SITE_TITLE=My Beautiful Photo Gallery
SITE_DESCRIPTION=A stunning photo gallery powered by Cloudflare Workers
SITE_URL=https://gallery.yourdomain.com
SITE_AUTHOR_NAME=Your Name
SITE_AUTHOR_URL=https://yourdomain.com
SITE_AUTHOR_AVATAR=https://yourdomain.com/avatar.jpg

# 社交媒体配置 (可选)
SOCIAL_TWITTER=your-twitter-handle
SOCIAL_GITHUB=your-github-username
SOCIAL_RSS=true

# 地图配置 (可选)
MAP_PROVIDER=maplibre
MAP_STYLE=https://your-map-style-url.json

# 构建配置
BUILD_FRONTEND=true
UPLOAD_STATIC=true
DRY_RUN=false

# 缓存配置
CACHE_TTL_MANIFEST=300
CACHE_TTL_IMAGES=31536000
CACHE_TTL_THUMBNAILS=31536000

# 调试配置
DEBUG=false
VERBOSE_LOGGING=false